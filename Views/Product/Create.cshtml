@model SumkaWeb.Models.ProductCreateModel
@{
    ViewBag.Title = "Create";
}

<script src="@Url.Content("~/Scripts/jquery/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
   <script src="@Url.Content("~/Scripts/sumkaScripts/create_product.js")" type="text/javascript"></script>
<div class="container">
   
      
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <fieldset>
                <legend> Створити товар </legend>
                   @Html.HiddenFor(model => model.StoreID)
                    <div class="row">
                     <div class="span6">
                <div class="editor-label">
                    @Html.Label("Назва")
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Product.Name)
                    @Html.ValidationMessageFor(model => model.Product.Name)
                </div>
                  <div class="editor-label">
                    @Html.Label("Короткий опис")
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.BannerShortDescription)
                    @Html.ValidationMessageFor(model => model.BannerShortDescription)
                </div>
              </div>
                </div>




                <p>
                    <input type="submit" value="Створити" />
                </p>
            </fieldset>
        }
        <div>
            @Html.ActionLink("Повернутись до списку", "Index")
        </div>
   
</div>
