@model SumkaWeb.Models.StoreEditModel
@{
    ViewBag.Title = "Edit Store";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/tiny_mce_src.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/combinedHTML-tinymce.js")" type="text/javascript"></script>
<div class="container">
    <div class="row">
        @using (Html.BeginForm())
        {
   
            @Html.ValidationSummary(true)
            <fieldset>
                <legend>Store</legend>
                @Html.HiddenFor(model => model.Store.Id)
                
                <div class="editor-field">
                    @Html.EditorFor(model => model.Store.Name)
                    @Html.ValidationMessageFor(model => model.Store.Name)
                </div>
                @if (Model.Store.HtmlBanner != null) {
                            @Html.Raw(System.Web.HttpUtility.HtmlDecode(Model.Store.HtmlBanner ))
                }
                <div class="editor-field">
                    @Html.TextArea("Store.HtmlBanner", System.Web.HttpUtility.HtmlDecode(Model.Store.HtmlBanner), 25, 80,
     new Dictionary<string, object> {	
        {"style", "width:100%"},
         {"class", "html tinymce"}
	 })
                </div>
                @foreach (var item in Model.Store.Products)
                {
                    <div class="row">
                        <div class="span24">
                            <div class="span16">
                                @Html.DisplayFor(modelItem => item.Name)
                                @Html.ActionLink("Edit Product", "EditProduct", new { id = item.Id })
                                 
                            </div>
                           
                        </div>
                    </div>
                   
                }
                <p>
                 @Html.ActionLink("Add Product", "AddProduct", new { id = Model.Store.Id })
                    <input type="submit" value="Save" />
                </p>
            </fieldset>
       
        }
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>
